@model List<Contact>
<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>
    @foreach (var item in Model)
    {
        <div class="row narrow section-intro">
            <div class="col-full">
                <h3>İletişim</h3>
                <h1>@item.Title</h1>

                <p class="lead">@item.Desc</p>
            </div>
        </div>

        <div class="row contact__main">
            <div class="col-eight tab-full contact__form">
                <form id="contactForm" method="post" action="/Message/SendMessage">
                    <fieldset>
                        <input name="NameSurname" type="text" id="contactName" placeholder="Ad Soyad" required minlength="2" class="full-width"/>
                        <input name="Email" type="email" id="contactEmail" placeholder="Email" required class="full-width" />
                        <input name="Subject" type="text" id="contactSubject" placeholder="Konu" class="full-width" />
                        <textarea name="MessageDetail" id="contactMessage" placeholder="Mesaj" required class="full-width"></textarea>
                        <button type="submit">Gönder</button>
                    </fieldset>
                </form>

                <div class="message-success" style="display:none; color:green;"></div>
                <div class="message-warning" style="display:none; color:red;"></div>
       
            </div>

            <div class="col-four tab-full contact__infos">
                <h4 class="h06">Telefon</h4>
                <p>
                    Telefon:@item.Phone1<br>
                    Mobil: @item.Phone2<br>
                </p>

                <h4 class="h06">Email</h4>
                <p>
                    @item.Email1<br>
                    @item.Email2<br>
                </p>

                <h4 class="h06">Adres</h4>
                <p>
                    @item.Address
                </p>
            </div>
        </div>
    }
</section>


