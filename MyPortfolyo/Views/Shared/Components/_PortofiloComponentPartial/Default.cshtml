@model List<Portofilo>
<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolyo</h3>
            <h1>Senin İçin Neler Yapabilirim?</h1>

            <p class="lead">
                Hayalindeki projeyi hayata geçirmek, işlerini dijital dünyada bir adım öteye taşımak ya da sadece nereden başlayacağını bilemediğin bir fikri şekillendirmek için buradayım.
                İhtiyacın olan şey modern bir web sitesi mi, sağlam bir altyapı mı, yoksa sadece seni anlayacak biri mi?
                Teknolojiyle arandaki köprüyü kurmak, işini kolaylaştırmak ve sana özel çözümler üretmek için elimden geleni yaparım.
                Birlikte çalıştığımızda, sadece bir iş ortaya koymakla kalmaz, sürecin her anında yanında olurum.
            </p>
        </div>
    </div>


    <div class="row masonry-wrap">
        <div class="masonry-grid">
            @foreach (var item in Model)
            {
                <div class="masonry__brick">

                    <div class="item-folio">

                        <div class="item-folio__thumb">
                            <a href="@item.ImageUrl" class="thumb-link" title="@item.Title" data-size="1050x700">
                                <img src="@item.ImageUrl"
                                     srcset="@item.ImageUrl 1x, @item.ImageUrl 2x" alt="">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @item.Title
                            </h3>
                            <p class="item-folio__cat">
                                @item.SubTitle
                            </p>
                        </div>

                        <a href="@item.Url" class="item-folio__project-link" title="Project link" target="_blank" rel="noopener noreferrer" >
                            <i class="im im-link"></i>
                        </a>

                        <div class="item-folio__caption">
                            <p>@item.Desc</p>
                        </div>
                    </div> <!-- end item-folio -->

                </div> <!-- end masonry__brick -->
            }
        </div>
    </div> <!-- end masonry -->
    }
</section> <!-- end works -->
