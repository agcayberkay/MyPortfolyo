@model List<Skils>
@{
	ViewData["Title"] = "SkillsList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yeteneklerle ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Değer</th>							
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SkilsId</td>
										<td>@item.Title</td>
										<td>@item.Value</td>
										<td><a href="/Skills/DeleteSkils/@item.SkilsId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Skills/UpdateSkils/@item.SkilsId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Skills/CreateSkils/" class="btn btn-primary">Yeni Yetenek Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


