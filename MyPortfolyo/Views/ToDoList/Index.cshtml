@model List<ToDoList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Yapılacaklar</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yapılacaklar Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Yapılacaklar ile ilgili işlemleri aşağıdaki panelden gerçekleştirebilirsiniz.
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">İçerik</th>
                                        <th scope="col">Tarih</th>
                                        <th scope="col">Durum</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ToDoListId</td>
                                            <td>@item.Title</td>
                                            <td>@item.Date</td>
                                            @if (item.Status == true)
                                            {
                                                <td><a href="/ToDoList/CompletedToDo/@item.ToDoListId" class="btn btn-dark">Yapıldı</a></td>

                                            }
                                            else
                                            {
                                                <td><a href="/ToDoList/UnCompletedToDo/@item.ToDoListId" class="btn btn-info">Yapılmadı</a></td>

                                            }
                                            <td><a href="/ToDoList/DeleteToDo/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/ToDoList/ToDo/@item.ToDoListId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
