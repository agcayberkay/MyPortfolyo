@model List<Portofilo>
@{
	ViewData["Title"] = "PortofolioList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Portfolyo</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Portfolyo Listesi</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Portfolyo ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Başlık</th>
										<th scope="col">Alt Başlık</th>
										<th scope="col">Link</th>
										<th scope="col">Açıklama</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Title</td>
											<td>@item.SubTitle</td>											
											<td>@item.Url</td>
											<td>@item.Desc</td>
											<td><a href="/Portofolio/DeletePortfolyo/@item.PortofiloId" class="btn btn-danger">Sil</a></td>
											<td><a href="/Portofolio/UpdatePortfolyo/@item.PortofiloId" class="btn btn-success">Güncelle</a></td>
										</tr>
									}
								</tbody>
							</table>
							<a href="/Portofolio/AddPortfolyo/" class="btn btn-primary">Yeni Portfolyo Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

