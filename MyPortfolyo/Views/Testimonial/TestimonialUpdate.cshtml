@model Testimonial
@{
    ViewData["Title"] = "TestimonialUpdate";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Referanslar</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referans Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Referans ile ilgili güncelleme işlemleri aşağıdaki panelden yapabilirisniz
                            </div>

                            <form method="post">
                                <input type="hidden" asp-for="TestimonialId" class="form-control" />
                                <br />
                                <label>Ad Soyad</label>
                                <input type="text" asp-for="NameSurname" class="form-control" />
                                <br />
                                <label>Başlık</label>
                                <input type="text" asp-for="Title" class="form-control" />
                                <br />
                                <label>Açıklama</label>
                                <input type="text" asp-for="Desc" class="form-control" />
                                <br />
                                <label>Resim Yolu</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" />
                                <br />
                                <button class="btn btn-warning">Referans Güncelle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>